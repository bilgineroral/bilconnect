<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity" >

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="300dp"
            android:layout_height="63dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/textView26"
            app:layout_constraintTop_toBottomOf="@+id/textView26">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextTextMultiLine2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine" />
            </LinearLayout>
        </ScrollView>

        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/textView25"
            app:layout_constraintTop_toBottomOf="@+id/textView25" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Choose the place of your event:"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView24"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Type the title of your event:"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/swimmingView"
            app:layout_constraintTop_toBottomOf="@+id/swimmingView" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="What kind of sport event will this be?"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/americanButton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#4CAF50"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="selected"
            android:text="amerıcan football"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/walkingView"
            app:layout_constraintTop_toBottomOf="@+id/walkingView" />

        <Button
            android:id="@+id/swimmingButton"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#4CAF50"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="selected"
            android:text="swımmıng"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tennisView"
            app:layout_constraintTop_toBottomOf="@+id/tennisView" />

        <Button
            android:id="@+id/tableTennisButton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#4CAF50"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="selected"
            android:text="table tennıs"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/fitnessView"
            app:layout_constraintTop_toBottomOf="@+id/fitnessView" />

        <Button
            android:id="@+id/fitnessButton"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#4CAF50"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="selected"
            android:text="fıtness"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/basketballView"
            app:layout_constraintTop_toBottomOf="@+id/basketballView" />

        <Button
            android:id="@+id/tennisButton"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#4CAF50"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="selected"
            android:text="tennıs"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/footballView"
            app:layout_constraintTop_toBottomOf="@+id/footballView" />

        <Button
            android:id="@+id/walkingButton"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#4CAF50"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="selected"
            android:text="walkıng"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/volleyballView"
            app:layout_constraintTop_toBottomOf="@+id/volleyballView" />

        <Button
            android:id="@+id/volleyballButton"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:backgroundTint="#4CAF50"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="selected"
            android:text="Volleyball"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/basketballButton"
            app:layout_constraintStart_toEndOf="@+id/basketballButton" />

        <Button
            android:id="@+id/footballButton"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#4CAF50"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="selected"
            android:text="football"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <ImageView
            android:id="@+id/footballView"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:layout_marginTop="3dp"
            android:onClick="imageSelected"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/footballButton"
            app:layout_constraintStart_toStartOf="@+id/footballButton"
            app:layout_constraintTop_toBottomOf="@+id/footballButton"
            app:srcCompat="@drawable/football" />

        <Button
            android:id="@+id/basketballButton"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:backgroundTint="#4CAF50"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="selected"
            android:text="Basketball"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/footballButton"
            app:layout_constraintStart_toEndOf="@+id/footballButton" />

        <ImageView
            android:id="@+id/basketballView"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="3dp"
            android:onClick="imageSelected"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="@+id/basketballButton"
            app:layout_constraintTop_toBottomOf="@+id/basketballButton"
            app:srcCompat="@drawable/basketball" />

        <ImageView
            android:id="@+id/volleyballView"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="3dp"
            android:onClick="imageSelected"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="@+id/volleyballButton"
            app:layout_constraintTop_toBottomOf="@+id/volleyballButton"
            app:srcCompat="@drawable/volleyball" />

        <ImageView
            android:id="@+id/tennisView"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:layout_marginTop="3dp"
            android:onClick="imageSelected"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="@+id/tennisButton"
            app:layout_constraintTop_toBottomOf="@+id/tennisButton"
            app:srcCompat="@drawable/tennis" />

        <ImageView
            android:id="@+id/fitnessView"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="3dp"
            android:onClick="imageSelected"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="@+id/fitnessButton"
            app:layout_constraintTop_toBottomOf="@+id/fitnessButton"
            app:srcCompat="@drawable/fitness" />

        <ImageView
            android:id="@+id/walkingView"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="3dp"
            android:onClick="imageSelected"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="@+id/walkingButton"
            app:layout_constraintTop_toBottomOf="@+id/walkingButton"
            app:srcCompat="@drawable/walk" />

        <ImageView
            android:id="@+id/americanView"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="3dp"
            android:onClick="imageSelected"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="@+id/americanButton"
            app:layout_constraintTop_toBottomOf="@+id/americanButton"
            app:srcCompat="@drawable/american" />

        <ImageView
            android:id="@+id/tabTennisView"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="3dp"
            android:onClick="imageSelected"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="@+id/tableTennisButton"
            app:layout_constraintTop_toBottomOf="@+id/tableTennisButton"
            app:srcCompat="@drawable/tabletennis" />

        <ImageView
            android:id="@+id/swimmingView"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:layout_marginTop="3dp"
            android:onClick="imageSelected"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="@+id/swimmingButton"
            app:layout_constraintTop_toBottomOf="@+id/swimmingButton"
            app:srcCompat="@drawable/swimming" />

        <EditText
            android:id="@+id/eventTitleText"
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/textView23"
            app:layout_constraintStart_toEndOf="@+id/textView23"
            app:layout_constraintTop_toTopOf="@+id/textView23" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Set the quota of your event:"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/textView23" />

        <EditText
            android:id="@+id/quotaNumberText"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/textView24"
            app:layout_constraintStart_toEndOf="@+id/textView24"
            app:layout_constraintTop_toTopOf="@+id/textView24" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Type the details of your event:"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/spinner5"
            app:layout_constraintTop_toBottomOf="@+id/spinner5" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Enter the date of your event:"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/scrollView2"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

        <EditText
            android:id="@+id/editTextDate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="@+id/textView27"
            app:layout_constraintTop_toBottomOf="@+id/textView27" />

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="publishEvent"
            android:text="Done"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editTextDate3"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate3" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>