<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/nickNameText"
        android:layout_width="190dp"
        android:layout_height="33dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="nickname"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/profilePicture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deptText"
        android:layout_width="101dp"
        android:layout_height="33dp"
        android:layout_marginTop="7dp"
        android:text="dept"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/nickNameText"
        app:layout_constraintTop_toBottomOf="@+id/nickNameText" />

    <TextView
        android:id="@+id/dormText"
        android:layout_width="86dp"
        android:layout_height="34dp"
        android:layout_marginTop="7dp"
        android:text="dorm"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/deptText"
        app:layout_constraintTop_toBottomOf="@+id/deptText" />

    <TextView
        android:id="@+id/ratingText"
        android:layout_width="118dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="rating"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/bioText"
        android:layout_width="218dp"
        android:layout_height="76dp"
        android:layout_marginTop="8dp"
        android:text="bio"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/dormText"
        app:layout_constraintTop_toBottomOf="@+id/dormText"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/noOfFollowersText"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:layout_marginTop="6dp"
        android:text="no of followers"
        app:layout_constraintStart_toStartOf="@+id/ratingText"
        app:layout_constraintTop_toBottomOf="@+id/ratingText" />

    <TextView
        android:id="@+id/interestText"
        android:layout_width="362dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:text="interests:"
        app:layout_constraintStart_toStartOf="@+id/noOfFollowersText"
        app:layout_constraintTop_toBottomOf="@+id/bioText"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SEE REGISTERED EVENTS"
        app:layout_constraintStart_toStartOf="@+id/interestText"
        app:layout_constraintTop_toBottomOf="@+id/interestText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="383dp"
        android:layout_height="206dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="117dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>