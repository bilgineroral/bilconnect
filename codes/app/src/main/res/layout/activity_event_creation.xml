<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.EventCreationActivity">

    <Button
        android:id="@+id/sportsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="43dp"
        android:backgroundTint="#228B22"
        android:clickable="false"
        android:onClick="sendToSports"
        android:text="Sports"
        app:layout_constraintBottom_toTopOf="@+id/sports_image"
        app:layout_constraintEnd_toStartOf="@+id/studyButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/studyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#FF0000"
        android:clickable="false"
        android:onClick="sendToStudy"
        android:text="Study"
        app:layout_constraintBottom_toTopOf="@+id/study_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sportsButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/entertainmentButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="19dp"
        android:clickable="false"
        android:onClick="sendToEnter"
        android:text="EntertaÄ±nment"
        app:layout_constraintBottom_toTopOf="@+id/entertainment_image"
        app:layout_constraintEnd_toStartOf="@+id/otherButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sports_image" />

    <Button
        android:id="@+id/otherButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="29dp"
        android:backgroundTint="#36454F"
        android:clickable="false"
        android:onClick="sendToOther"
        android:text="Other"
        app:layout_constraintBottom_toBottomOf="@+id/entertainmentButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/entertainmentButton"
        app:layout_constraintTop_toBottomOf="@+id/study_image" />

    <ImageView
        android:id="@+id/sports_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="36dp"
        android:clickable="true"
        android:onClick="sendToSports"
        app:layout_constraintBottom_toTopOf="@+id/entertainmentButton"
        app:layout_constraintEnd_toStartOf="@+id/study_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sportsButton"
        app:srcCompat="@drawable/sportsphoto1" />

    <ImageView
        android:id="@+id/study_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="37dp"
        android:clickable="true"
        android:onClick="sendToStudy"
        app:layout_constraintBottom_toTopOf="@+id/otherButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sports_image"
        app:layout_constraintTop_toBottomOf="@+id/studyButton"
        app:srcCompat="@drawable/studyphoto1" />

    <ImageView
        android:id="@+id/entertainment_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="104dp"
        android:clickable="true"
        android:onClick="sendToEnter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/other_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entertainmentButton"
        app:srcCompat="@drawable/entertainment" />

    <ImageView
        android:id="@+id/other_image"
        android:layout_width="138dp"
        android:layout_height="127dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="132dp"
        android:clickable="true"
        android:onClick="sendToOther"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/entertainment_image"
        app:srcCompat="@drawable/plus_image2" />

</androidx.constraintlayout.widget.ConstraintLayout>