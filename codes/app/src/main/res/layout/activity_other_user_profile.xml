<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#015DE6"
    android:foregroundTint="#005CE5"
    tools:context=".View.Fragments.OtherUserProfileActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="383dp"
        android:layout_height="206dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interestText3" />

    <TextView
        android:id="@+id/ratingText4"
        android:layout_width="118dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text="rating"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/profilePicture4"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/interestText3"
        android:layout_width="362dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:text="interests:"
        app:layout_constraintStart_toStartOf="@+id/noOfFollowersText3"
        app:layout_constraintTop_toBottomOf="@+id/bioText3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/noOfFollowersText3"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:layout_marginTop="6dp"
        android:text="no of followers"
        app:layout_constraintTop_toBottomOf="@+id/ratingText4"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/dormText3"
        android:layout_width="86dp"
        android:layout_height="34dp"
        android:layout_marginTop="7dp"
        android:text="dorm"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/deptText3"
        app:layout_constraintTop_toBottomOf="@+id/deptText3" />

    <TextView
        android:id="@+id/bioText3"
        android:layout_width="218dp"
        android:layout_height="76dp"
        android:layout_marginTop="8dp"
        android:text="bio"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/dormText3"
        app:layout_constraintTop_toBottomOf="@+id/dormText3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/deptText3"
        android:layout_width="101dp"
        android:layout_height="33dp"
        android:layout_marginTop="7dp"
        android:text="dept"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/nickNameText3"
        app:layout_constraintTop_toBottomOf="@+id/nickNameText3" />

    <ImageView
        android:id="@+id/profilePicture4"
        android:layout_width="117dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nickNameText3"
        android:layout_width="190dp"
        android:layout_height="33dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="nickname"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/profilePicture4"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="84dp"
        android:layout_height="41dp"
        android:backgroundTint="#005CE5"
        android:text="Follow"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/nickNameText3"
        app:layout_constraintTop_toTopOf="@+id/deptText3" />

    <Button
        android:id="@+id/button10"
        android:layout_width="84dp"
        android:layout_height="41dp"
        android:text="Block"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

</androidx.constraintlayout.widget.ConstraintLayout>