<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#015DE6"
    android:foregroundTint="#005CE5"
    tools:context=".View.OtherUserProfileActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interestText3" />

    <TextView
        android:id="@+id/ratingText4"
        android:layout_width="116dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text="rating"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/profilePicture4"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ratingText5"
        android:layout_width="116dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:text="followers"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/profilePicture4"
        app:layout_constraintTop_toBottomOf="@+id/ratingText4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/interestText3"
        android:layout_width="362dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="interests:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bioText3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/bioText3"
        android:layout_width="218dp"
        android:layout_height="76dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:text="bio"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ratingText4"
        app:layout_constraintTop_toBottomOf="@+id/deptText3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/deptText3"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:text="dept"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/nickNameText3"
        app:layout_constraintTop_toBottomOf="@+id/nickNameText3" />

    <ImageView
        android:id="@+id/profilePicture4"
        android:layout_width="114dp"
        android:layout_height="116dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nickNameText3"
        android:layout_width="190dp"
        android:layout_height="33dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:text="nickname"
        android:textColor="#C50D0D"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/profilePicture4"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="84dp"
        android:layout_height="38dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#005CE5"
        android:text="Follow"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nickNameText3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="84dp"
        android:layout_height="38dp"
        android:text="Block"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>